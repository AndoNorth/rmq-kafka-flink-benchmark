# ── Broker topology ──────────────────────────────────────────────────────────
# Number of Redpanda/RabbitMQ partitions.  Must be the same for both stacks
# to ensure a fair comparison.
PARTITIONS=8

# ── Scale ────────────────────────────────────────────────────────────────────
PRODUCER_SCALE=1
CONSUMER_SCALE=1

# ── Producer settings ─────────────────────────────────────────────────────────
# 0 = unlimited (max throughput), N = target messages per second per instance.
RATE_LIMIT=0
# Size of the generated payload appended to each message (bytes).
MSG_SIZE_BYTES=256

# ── Topic / super-stream name ─────────────────────────────────────────────────
TOPIC=benchmark

# ── Resource limits (applied equally to both broker stacks) ──────────────────
# These values are intentionally identical for both docker-compose files to
# ensure the comparison is fair.
BROKER_CPUS=2.0
BROKER_MEMORY=2G
PRODUCER_CPUS=0.5
PRODUCER_MEMORY=256M
CONSUMER_CPUS=0.5
CONSUMER_MEMORY=256M
